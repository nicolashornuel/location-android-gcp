<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LocationTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Typography & Shapes -->
        <item name="buttonStyle">@style/Widget.LocationTracker.Button</item>
    </style>
    
    <!-- Minimal Button Style -->
    <style name="Widget.LocationTracker.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="elevation">0dp</item>
    </style>
    
    <!-- Minimal Card Style (for display output) -->
    <style name="Widget.LocationTracker.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">24dp</item>
    </style>

</resources>